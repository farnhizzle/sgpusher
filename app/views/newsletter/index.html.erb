<h1>push:</h1>

<%= form_tag({:controller => 'newsletter',
              :action => 'preview'},
             :id => 'data') do %>

<label>Template</label>
	<select name="template">
	<%= options_for_select([['Template 1', 1], ['Template 2', 2]]) %>
	</select><br>
<label>Send to</label>
	<select name="sendto">
	<%= options_for_select([['All Users', 1], ['Incomplete Users', 2]]) %>
	</select><br>

<label>Subject</label>
	<input name="subject" placeholder="Subject"> <br>

<label>Body</label>
	<%= text_area_tag(:message, "", :size => "24x6") %><br>

	<%= submit_tag("Preview") %>
<% end %>